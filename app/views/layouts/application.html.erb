<!DOCTYPE html>
<html>
<head>
  <title>My Ballots</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
	<%= render 'layouts/google_analytics' %>
</head>
<body class="<%= controller_name %>">
	
	<p class="alert"><%= alert %></p>
	
	<div id="page">
		<%= yield %>
	</div>
	
			<% if voter_signed_in? %>
			<div id="voter_nav">
				  Logged in as <strong><%= current_voter.email %></strong>.<br>
				  <%= link_to 'Edit profile', edit_voter_registration_path %> |
				  <%= link_to "Logout", destroy_voter_session_path, method: :delete %>
					<% if controller_name == 'ballots' && action_name == 'show' %>
						 | <%= link_to "back to All Ballots", ballots_path %>			 
					<% end %>
			</div>
			<% end %>
	
</body>
</html>
