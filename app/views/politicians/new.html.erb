<div class="inputExplanation" id="iE1">
	<h2>Who can you vote for:</h2>
</div>

<%= form_for(@politician) do |f| %>
  <% if @politician.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@politician.errors.count, "error") %> prohibited this politician from being saved:</h2>

      <ul>
      <% @politician.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<div class="candidateFields">
    <%= f.hidden_field(:ballot_ids, :value => params[:ballot_id]) %>
    <%= f.hidden_field(:ballot_id, :value => params[:ballot_id]) %>
    <%= f.hidden_field(:voter_id, :value => params[:voter_id]) %>
	  <%= f.hidden_field(:office_ids, :value => params[:office_id]) %>
	
		<div class="field">
		  <p>Name (you can put both running mates names, if applicable)</p>
		  <%= f.text_field :name, :autofocus => "autofocus" %>
		</div>
		<div class="field">
		  <p>Party</p>
		  <%= f.text_field :party, :placeholder => "if applicable" %>
		</div>
	

	</div>
	
  <div class="actions">
    <%= f.button "Add the next candidate", :name => 'next_choice' %>
		<%= f.button "Go to the next office", :name => 'next_office' %>
		<%= f.button "The ballot is complete", :name => 'ballot_review' %>
  </div>
	
<% end %>